{
  "rules": {
    "leads": {
      ".read": false,
      ".write": true,
      ".indexOn": ["status", "timestamp"],
      "$leadId": {
        ".validate": "newData.hasChildren(['businessName', 'email'])"
      }
    },
    "signing": {
      ".indexOn": ["status"],
      "$signToken": {
        ".read": true,
        ".write": "!data.exists() || !data.child('status').val().matches(/^(signed|processed)$/)",
        ".validate": "newData.hasChildren(['client_name', 'project_name'])"
      }
    },
    "builds": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["created_at", "status"]
    },
    "contracts": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "invoices": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "portfolio": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "activity_logs": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["created_at", "entity_type"]
    },
    "parse_requests": {
      ".read": "auth != null",
      ".write": true,
      ".indexOn": ["status"]
    },
    "commands": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "site_analytics": {
      ".read": "auth != null",
      ".write": true,
      ".indexOn": ["timestamp"]
    }
  }
}
